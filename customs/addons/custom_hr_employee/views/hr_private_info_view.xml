<odoo>
  <record id="view_employee_form_inherit_id_card" model="ir.ui.view">
    <field name="name">hr.employee.form.inherit.id.card</field>
    <field name="model">hr.employee</field>
    <field name="inherit_id" ref="hr.view_employee_form"/>
    <field name="arch" type="xml">
      <xpath expr="//field[@name='country_id']" position="before">
        <field name="id_card_image" widget="work_permit_upload"/>
      </xpath>
      <xpath expr="//field[@name='country_of_birth']" position="after">
        <field name="religion"/>
      </xpath>
    </field>
  </record>
</odoo>