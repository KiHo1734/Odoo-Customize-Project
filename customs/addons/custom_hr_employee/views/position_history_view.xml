<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- List view -->
    <record id="view_position_history_list" model="ir.ui.view">
        <field name="name">hr.position.history.list</field>
        <field name="model">hr.position.history</field>
        <field name="type">list</field>
        <field name="arch" type="xml">
            <list>
                <field name="employee_id"/>
                <field name="job_id"/>
                <field name="department_id"/>
                <field name="start_date"/>
                <field name="end_date"/>
            </list>
        </field>
    </record>

    <!-- Form view -->
    <record id="view_position_history_form" model="ir.ui.view">
        <field name="name">hr.position.history.form</field>
        <field name="model">hr.position.history</field>
        <field name="type">form</field> 
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="employee_id"/>
                    <field name="job_id"/>
                    <field name="department_id"/>
                    <field name="start_date"/>
                    <field name="end_date"/>
                    <field name="note"/>
                </group>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_hr_position_history" model="ir.actions.act_window">
        <field name="name">Position History</field>
        <field name="res_model">hr.position.history</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p>Add and manage job position changes of employees here.</p>
        </field>
    </record>

    <!-- Menu -->
    <menuitem id="menu_hr_position_history_root" name="Position History" parent="hr.menu_hr_root" sequence="100"/>
    <menuitem id="menu_hr_position_history" name="Position History Records"
              parent="menu_hr_position_history_root" action="action_hr_position_history"/>
</odoo>
