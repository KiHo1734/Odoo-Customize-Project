<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <template id="report_employee_list_template">
    <t t-call="web.basic_layout">
      <t t-set="docs" t-value="docs"/>
      <style>
        h2.report-title {
          text-align: center;
          font-size: 20px;
          margin: 10px 0 20px 0;
          color: #333;
        }
        table.o_main_table {
          width: 100%;
          border-collapse: collapse;
          font-size: 12px;
        }
        table.o_main_table th,
        table.o_main_table td {
          border: 1px solid #888;
          padding: 6px;
        }
        table.o_main_table thead {
          background-color: #f2f2f2;
          font-weight: bold;
        }
        table.o_main_table tbody tr:nth-child(even) {
          background-color: #fafafa;
        }
        thead { display: table-header-group; }
      </style>
      <h2 class="report-title">Print Employees List</h2>
      <table class="table table-sm o_main_table">
        <thead>
          <tr>
            <th>No.</th>
            <th>Name</th>
            <th>Job Position</th>
            <th>Department</th>
            <th>Start Date</th>
            <th>Retirement Date</th>
          </tr>
        </thead>
        <tbody>
          <t t-set="counter" t-value="0"/>
          <t t-foreach="docs" t-as="employee">
            <t t-set="counter" t-value="counter + 1"/>
            <tr>
              <td><t t-esc="counter"/></td>
              <td><t t-esc="employee.name"/></td>
              <td><t t-esc="employee.job_id.name or '-'"/></td>
              <td><t t-esc="employee.department_id.name or '-'"/></td>
              <td><t t-esc="employee.start_date.strftime('%d/%m/%Y') if employee.start_date else '-'"/></td>
              <td><t t-esc="employee.retirement_date.strftime('%d/%m/%Y') if employee.retirement_date else '-'"/></td>
            </tr>
          </t>
        </tbody>
      </table>

    </t>
  </template>
</odoo>
